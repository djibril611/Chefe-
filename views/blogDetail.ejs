}

/* Comment Form */
.comment-form {
    margin-top: 30px;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
}

.comment-form label {
    font-weight: 600;
    color: #2C3E50;
    margin-bottom: 10px;
    display: block;
}

.comment-form input, .comment-form textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 6px;
    margin-bottom: 20px;
    font-size: 16px;
}

.comment-form button {
    background-color: #FEA116;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 6px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.comment-form button:hover {
    background-color: #FEA116;
}

/* Sidebar Styling */
.sidebar .list-group-item {
    padding: 15px;
    background-color: #fff;
    margin-bottom: 10px;
    border-radius: 6px;
    transition: all 0.3s ease;
