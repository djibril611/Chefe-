<style>




.post-content {
    background-color: #fff;
    padding: 40px;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    margin-bottom: 40px;
    font-size: 18px;
    line-height: 1.8;
    color: #444;
}

.post-content p {
    margin-bottom: 20px;
    font-weight: 400;
}

.post-content h2, .post-content h3 {
    color: #34495E;
    margin-top: 30px;
    margin-bottom: 15px;
    font-weight: 700;
}

.post-content img {
    max-width: 100%;
    height: auto;
    border-radius: 6px;
    margin: 20px 0;
}

.post-content blockquote {
    padding: 20px;
    margin: 20px 0;
    background-color: #f1f1f1;
    border-left: 5px solid #FEA116;
    font-style: italic;
}

.post-content blockquote p {
    margin: 0;
    font-size: 18px;
}

.post-content code {
    background-color: #eee;
    padding: 2px 6px;
    border-radius: 4px;
    font-family: monospace;
}

.post-content pre {
    background-color: #2C3E50;
    color: #fff;
    padding: 15px;
    border-radius: 6px;
    overflow-x: auto;
}

.overlay-card-text .h3{
    color: #fff !important;
}

/* Responsive Image Styling */
.post-content img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 20px auto;
}
/* Styling for recent posts */
.recent-posts {
    padding: 20px 0;
    margin-top: 20px;
}

.recent-post-item {
    display: flex;
    align-items: center;
    padding: 10px;
    border-bottom: 1px solid #ddd;
    transition: background-color 0.3s ease;
}

.recent-post-item:hover {
    background-color: #f9f9f9;
}

.recent-post-image img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 5px;
    margin-right: 15px;
}

.recent-post-details {
    flex: 1;
}

.recent-post-details h5 {
    font-size: 16px;
    font-weight: 600;
    color: #333;
    margin: 0 0 5px;
}

.recent-post-details p {
    font-size: 14px;
    color: #777;
}

.recent-posts a {
    text-decoration: none;
    color: inherit;
}

.recent-posts a:hover {
    text-decoration: none;
    color: #000;
}

/* List Styling */
.post-content ul, .post-content ol {
    padding-left: 20px;
    margin-bottom: 20px;
}

.post-content ul li, .post-content ol li {
    margin-bottom: 10px;
    line-height: 1.6;
    color: #555;
}

/* Like Button Styling */
form button[type="submit"] {
    background-color:#FEA116;
    color: #fff;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 6px;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    outline: none;
}

form button[type="submit"]:hover {
    background-color: #FEA116;
}

/* Like Button Active Animation */
form button[type="submit"].liked {
    background-color: #FEA116;
    transform: scale(1.1); /* Slightly grow the button */
    color: white;
}

form button[type="submit"].liked:hover {
    background-color: #c0392b; /* Darker red on hover */
}

/* Like Button Ripple Effect */
form button[type="submit"]::after {
    content: '';
    position: absolute;
    width: 300%;
    height: 300%;
    top: 50%;
    left: 50%;
    background: rgba(255, 255, 255, 0.5);
    z-index: 1;
    border-radius: 50%;
    opacity: 0;
    transform: translate(-50%, -50%) scale(0);
    transition: opacity 0.6s, transform 0.6s;
}

form button[type="submit"].liked::after {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
    transition: transform 0.4s ease-in, opacity 0.3s ease-in-out;
}

/* Card styling for full-width rows */
.overlay-card {
    position: relative;
    overflow: hidden;
    border-radius: 10px;
    width: 100%;
    margin-bottom: 20px;
}

.overlay-card-img {
    width: 100%;
    height: 300px; /* Adjusted height for full-width cards */
    object-fit: cover;
    transition: transform 0.3s ease;
}

.overlay-card-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white !important;
    font-size: 30px;
    background-color: rgba(0, 0, 0, 0.5); /* Dark overlay */
    padding: 20px;
    border-radius: 10px;
}

.overlay-card-text h3 {
    margin-bottom: 20px;
    font-size: 36px; /* Larger font size for more impact */
}

.overlay-card:hover .overlay-card-img {
    transform: scale(1.05); /* Slight zoom on hover for a more subtle effect */
}

.overlay-card .btn {
    background-color: #FEA116;
    border: none;
    padding: 12px 30px;
    font-size: 20px; /* Larger button */
    transition: background-color 0.3s ease;
}

.overlay-card .btn:hover {
    background-color: #FEA116; /* Darker blue on hover */
}



/* Comments Section */
.comment-section h3 {
    color: #2C3E50;
    font-size: 24px;
    margin-bottom: 20px;
}

.comment-section .list-group-item {
    border: none;
    padding: 20px;
    border-bottom: 1px solid #f1f1f1;
}

.comment-section .list-group-item:last-child {
    border-bottom: none;
}

.comment-section strong {
    color: #FEA116;
}

.comment-section p {
    margin-top: 5px;
    color: #666;
}

.comment-section small {
