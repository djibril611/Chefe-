<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Blog Post</title>

    <!-- Quill CSS -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

    <!-- Quill JS -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f8f9fa;
      margin: 0;
      padding: 0;
  }

  .form-container {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding: 20px;
  }

  .form-box {
      background-color: white;
      border-radius: 10px;
      padding: 40px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      max-width: 800px;
      width: 100%;
  }

  .form-box h1 {
      text-align: center;
      font-size: 24px;
      margin-bottom: 30px;
      color: #333;
  }

  .form-group {
      margin-bottom: 20px;
  }

  label {
      font-size: 14px;
      color: #555;
  }

  input[type="text"],
  input[type="file"],
  .quill-editor {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 14px;
      margin-top: 5px;
      box-sizing: border-box;
  }

  input[type="text"]:focus,
  input[type="file"]:focus {
      border-color:#FEA116;
      outline: none;
      box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
  }

  #editor {
      height: 300px;
      margin-top: 10px;
      background-color: white;
      border-radius: 5px;
  }

  .ql-container {
      height: 300px;
      border: 1px solid #ddd;
      border-radius: 5px;
  }

  .ql-toolbar {
      border: 1px solid #ddd;
      border-radius: 5px 5px 0 0;
  }

  .submit-btn {
      width: 100%;
      padding: 12px;
      background-color: #FEA116;
      border: none;
      color: white;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.3s;
      margin-top: 20px;
  }

  .submit-btn:hover {
      background-color: #0056b3;
  }
</style>
</head>
<body>
  <div class="form-container">
    <div class="form-box">
        <h1>Create a New Blog Post</h1>

        <form action="/admin/create-blog" method="POST" enctype="multipart/form-data">
            <!-- Title -->
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" name="title" placeholder="Enter the blog title" required>
            </div>

            <!-- Content -->
            <div class="form-group">
                <label for="content">Content:</label>
                <div id="editor" class="quill-editor"></div>
                <input type="hidden" name="content" id="content">
            </div>

            <!-- Image Upload -->
            <div class="form-group">
                <label for="image">Upload Featured Image:</label>
                <input type="file" name="image" accept="image/*">
            </div>

            <!-- Submit Button -->
            <button type="submit" class="submit-btn">Create</button>
        </form>
    </div>
</div>
    <!-- Initialize Quill editor -->
    <script>
      var quill = new Quill('#editor', {
        theme: 'snow',
        modules: {
          toolbar: [
            [{ 'header': [1, 2, 3, false] }],
            [{ 'font': [] }],
            [{ 'align': [] }],
            ['bold', 'italic', 'underline', 'strike'],
            [{ 'list': 'ordered' }, { 'list': 'bullet' }],
            ['blockquote', 'code-block'],
            ['link', 'image', 'video'],
            [{ 'color': [] }, { 'background': [] }],
            [{ 'indent': '-1' }, { 'indent': '+1' }],
            ['clean']
          ]
        }
      });

      // Image upload handler for Quill
      quill.getModule('toolbar').addHandler('image', function() {
        var input = document.createElement('input');
        input.setAttribute('type', 'file');
        input.setAttribute('accept', 'image/*');
        input.click();

        input.onchange = function() {
          var file = input.files[0];
          if (file) {
            var formData = new FormData();
            formData.append('file', file);

            // Upload the image to the server
            fetch('/admin/upload-image', {
              method: 'POST',
              body: formData
            })
            .then(response => response.json())
            .then(result => {
              var imageURL = result.location;
              var range = quill.getSelection();
              quill.insertEmbed(range.index, 'image', imageURL);  // Insert the image into the editor
            })
            .catch(error => {
              console.error('Image upload failed:', error);
            });
          }
        };
      });

      // Form submission
      document.querySelector('form').onsubmit = function() {
        var contentInput = document.querySelector('input[name=content]');
        contentInput.value = quill.root.innerHTML;  // Capture Quill content
      };
    </script>
</body>
</html>
