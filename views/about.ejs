    <script>
        // Select the track and images
        const track = document.querySelector('.image-track');
        const images = document.querySelectorAll('.slider-img');
    
        // Initial state: Set currentIndex to 1 to center the second image
        let currentIndex = 1; // Start with the second image as the active one
        const imageWidth = images[0].clientWidth;
    
        // Set the initial position of the slider so that the second image is centered
        track.style.transform = 'translateX(' + (-imageWidth * currentIndex + imageWidth / 2) + 'px)';
    
        // Function to update the active image and move the track
        function updateSlider() {
            images.forEach((img, index) => {
                img.classList.remove('active');
                if (index === currentIndex) {
                    img.classList.add('active');
                }
            });
            // Move the track to center the active image with part of the previous and next images visible
            track.style.transform = 'translateX(' + (-imageWidth * currentIndex + imageWidth / 2) + 'px)';
        }
    
        // Next button functionality
        document.querySelector('#nextBtn').addEventListener('click', () => {
            if (currentIndex >= images.length - 1) return; // Prevent going past the last image
            currentIndex++;
            updateSlider();
        });
    
        // Previous button functionality
        document.querySelector('#prevBtn').addEventListener('click', () => {
            if (currentIndex <= 0) return; // Prevent going before the first image
            currentIndex--;
            updateSlider();
        });
    
        // Initialize the slider by setting the second image as the active one
        updateSlider();
    </script>
    
    
